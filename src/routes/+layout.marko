  html,
  body {
    min-height: 100vh !important;
    width: 100vw !important;
    overflow-x: hidden !important;
  }

  textarea {
    border: none;
    overflow: auto;
    outline: none;

    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;

    resize: none;
  }

  textarea:focus {
    border: none;
    overflow: auto;
    outline: none;

    -webkit-box-shadow: none;
    -moz-box-shadow: none;
    box-shadow: none;

    resize: none;
  }

  :root {
    min-height: 100vh !important;
  }

  .swup-progress-bar {
    background-color: rgb(125, 178, 230);
  }

  .readmeDiv > table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
    /* Prevents the table from wrapping */
  }

  .readmeDiv {
    all: unset !important;
    font-weight: 700;
  }

  .readmeDiv > h1 {
    font-size: 40px;
  }

  .readmeDiv > h2 {
    font-size: 35px;
  }

  .readmeDiv > h3 {
    font-size: 30px;
  }

  .readmeDiv > pre {
    padding: 20px !important;
    overflow-x: scroll;
    color: yellow;
    border-radius: 10px !important;
    border: solid rgb(40, 40, 40) 2px;
    background-color: rgb(40, 40, 40) !important;
  }

  .readmeDiv > * > pre {
    padding: 20px !important;
    overflow-x: scroll;
    color: yellow;
    border-radius: 10px !important;
    border: solid rgb(40, 40, 40) 2px;
    background-color: rgb(40, 40, 40) !important;
  }

  .readmeDiv > p {
    padding: 5px 5px 5px 0 !important;
  }

  .readmeDiv a {
    color: lightblue !important;
    text-decoration: underline !important;
    height: fit-content !important;
  }

  .readmeDiv > table,
  th,
  td {
    border: 1px solid white !important;
    padding: 5px !important;
  }

  .api_section {
    background-color: #2a3038;
    border: 2px solid #373f49;
    padding: 10px;
    margin: 0 0 40px 0 !important;
    border-radius: 10px;
    overflow-x: scroll;
    word-break: break-all;
  }

  .readmeDiv > .my_special {
    font-weight: 600;
    padding-bottom: 20px !important;
  }
}
